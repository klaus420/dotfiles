set adjust-open	            "width"
set scroll-wrap		    	"false"
set font                    "tewi 10"
set statusbar-bg            "#242c33"
set statusbar-fg            "#ecedee"
set completion-bg           "#242c33"
set completion-fg           "#bdbdbd"
set completion-highlight-bg "#242c33"
set completion-highlight-fg "#c64742"
set inputbar-bg             "#242c33"
set inputbar-fg             "#ecedee"
set notification-error-bg   "#242c33"
set notification-error-fg   "#74637d"
set notification-warning-bg "#242c33"
set notification-warning-fg "#3955c4"
set recolor-darkcolor       "#ffffff"
set recolor-lightcolor      "#242c33"
set pages-per-row	    	"1"
set page-padding            "1"

map <PageUp> scroll full-up
map <PageDown> scroll full-down
map <S-PageUp> scroll top
map <S-PageDown> scroll bottom
map <Space> adjust_window
map + zoom in
map - zoom out
map <F1> set "pages-per-row 1"
map <F2> set "pages-per-row 2"
map <F3> adjust_window best-fit
map <F4> adjust_window width
map <F11> toggle_fullscreen
map <Right> navigate next
map <Left> navigate previous
map x scroll right
map z scroll left
